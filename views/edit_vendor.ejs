    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet" />
    <title>ICV Report</title>

  </head>

  <body style="background-color: #A7A9AC;">

<div class="container" style="padding-top: 30px; width: 50%;">
<div class="card" style="padding: 10px">
  <div class="card-body">

<h4>New Vendor Details</h4>
<hr>

<form action="/users/edit_vendor/<%= vendors._id %>?_method=PUT" method="POST">


    <div class="row">
        <div class="col">
          <label for="name">Vendor ID</label>
          <input type="text" class="form-control" id="name" name="v_id" value="<%= vendors.v_id %>" disabled>
        </div>
      </div>

  <div class="row">
    <div class="col">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= vendors.name %>" disabled>
    </div>
  </div>

    <div class="row">
      <div class="col">
        <label for="company">Company</label>
        <input type="text" class="form-control" id="company" name="company" value="<%= vendors.company %>" disabled>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= vendors.email %>" disabled>
      </div>
    </div>
  
    <div class="row">
      <div class="col">
        <label for="tel">Phone</label>
        <input type="number" class="form-control" id="phone" name="phone" value="<%= vendors.phone %>" disabled>
      </div>
    </div>

    <div class="row">
        <div class="col">
          <label for="tel">Description</label>
          <input type="textarea" class="form-control" id="phone" style="font-size:small; height: 80px;" name="phone" value="<%= vendors.description %>" disabled>
        </div>
      </div>

      <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="exampleFormControlSelect1" name="status">
                    <option value="<%= vendors.status %>" selected><%= vendors.status %></option>
                    <option value="Active">Approve</option>
                    <option value="Rejected">Reject</option>
                </select>
              </div>
        </div>
      </div>


    </div>
    <br>
    <div class="text-right">
        <button type="submit" class="btn btn-warning btn-md" onclick="myFunction()">Update</button>

        <script>
        function myFunction() {
          alert("Data is updated successfully!");
        }
        </script>
      <button type="button" class="btn btn-danger btn-md" id="signbutton2" onclick="window.location.href='/new_vendor';">Back</button>
   </div>
  
  </form>
</div>
</div>
<br>

  


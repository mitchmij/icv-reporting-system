    <title>ICV Report</title>

  </head>

  <body style="background-color: #A7A9AC;">

    <div class="container" style="padding-top: 50px; padding-bottom: 40px; width: 50%;">
      <div class="card" style="padding: 10px">
        <div class="card-body">
      
      <h4>Apprenticeship Break Down</h4>
      <hr>

<form action="/apprentice/editappcontract/<%= apprentices._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
      <div class="col">
        <label for="fullname">Full Name</label>
        <input type="text" class="form-control" id="fullname" name="fullname" value="<%= apprentices.fullname %>" required>
      </div>
      </div>
  
      <div class="row form-group mb-4">
      <div class="col">
        <label for="ic">IC Number</label>
        <input type="text" class="form-control" id="ic" name="ic" value="<%= apprentices.ic %>" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
        <div class="col">
            <label for="ready">I-Ready</label>
            <input type="text" class="form-control" id="iready" name="iready" value="<%= apprentices.iready %>" required>
          </div>
          </div>
  
          <div class="row form-group mb-4">
          <div class="col">
            <label for="duration">Duration</label>
            <input type="text" class="form-control" id="duration" name="duration" value="<%= apprentices.duration %>" required>
          </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="start">Start</label>
            <input type="date" class="form-control" id="start" name="start" value="<%= apprentices.start %>" required>
          </div>
          </div>
  
          <div class="row form-group mb-4">
          <div class="col">
            <label for="end">End</label>
            <input type="date" class="form-control" id="end" name="end" value="<%= apprentices.end %>" required>
          </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="qualify">Qualification</label>
            <input type="text" class="form-control" id="qualification" name="qualification" value="<%= apprentices.qualification %>" required>
          </div>
          </div>
  
          <div class="row form-group mb-4">
          <div class="col">
            <label for="skill">Skill/Trade</label>
            <input type="text" class="form-control" id="skilltrade" name="skilltrade" value="<%= apprentices.skilltrade %>" required>
          </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="accredite">Accreditation</label>
            <input type="text" class="form-control" id="accreditation" name="accreditation" value="<%= apprentices.accreditation %>" required>
          </div>
    </div>
    <br>
    <div class="text-right">
      <button type="submit" class="btn btn-warning btn-md" onclick="myFunction()">Update</button>

      <script>
      function myFunction() {
        alert("Data is updated successfully!");
      }
      </script>
 <button type="button" class="btn btn-danger btn-md" id="signbutton2" onclick="window.location.href='/cont_summary/<%= apprentices.contract_no %>'">Back</button>
   </div>
  </form>
</div>
</div>
</div>

  

